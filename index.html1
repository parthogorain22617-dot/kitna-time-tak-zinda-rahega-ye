<!DOCTYPE html>
<html lang="hi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Kitna Time Tak Zinda Rahega Ye?</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Hind+Siliguri:wght@600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Hind Siliguri', sans-serif; background: linear-gradient(135deg, #10b981, #059669); }
    .scare { animation: pulse 2s infinite; }
    @keyframes pulse { 0%,100% { transform: scale(1); } 50% { transform: scale(1.05); } }
  </style>
</head>
<body class="min-h-screen text-white">

  <div class="container mx-auto p-6 max-w-md">
    <h1 class="text-4xl font-bold text-center mt-10 mb-2">Kitna Time Tak Zinda Rahega Ye?</h1>
    <p class="text-center text-lg mb-8 opacity-90">â€œJo cheez aaj phenk rahe hoâ€¦ woh aapke parivaar ko 500 saal tak sataayegiâ€</p>

    <input 
      type="text" 
      id="itemInput" 
      placeholder="Yahan item ka naam likho ya scan karo..." 
      class="w-full p-4 rounded-xl text-black text-xl mb-6 shadow-lg"
      autofocus
    />

    <div id="result" class="hidden space-y-8">

      <!-- SCREEN 1 â€“ SCARE SCREEN (Big Red) -->
      <div class="bg-red-600 rounded-2xl p-8 text-center scare shadow-2xl">
        <h2 class="text-5xl font-black mb-4" id="scareText"></h2>
        <p class="text-2xl">Ye aapke 18th generation ke baad bhi zinda rahega!</p>
      </div>

      <!-- SCREEN 2 â€“ FAMILY FUTURE (Emotional Hit) -->
      <div class="bg-orange-600 rounded-2xl p-8 shadow-2xl">
        <h3 class="text-3xl font-bold mb-6 text-center">Aapke parivaar ke saath kya hoga?</h3>
        <ul class="text-xl space-y-4" id="familyEffects"></ul>
      </div>

      <!-- SCREEN 3 â€“ ALTERNATIVE (Green Hope) -->
      <div class="bg-green-600 rounded-2xl p-8 shadow-2xl">
        <h3 class="text-3xl font-bold mb-6 text-center">Aaj hi badal do!</h3>
        <div class="bg-white text-black rounded-xl p-6 text-2xl font-bold text-center" id="alternative"></div>
        <div class="text-center mt-6">
          <button class="bg-yellow-400 text-black px-8 py-4 rounded-full font-bold text-xl shadow-lg hover:scale-110 transition">
            ğŸ›ï¸ Abhi Order Karo (30 min mein ghar!)
          </button>
        </div>
      </div>

      <!-- Extra Desi Touch -->
      <div class="text-center mt-10 text-3xl">
        <p>Ek baar Ganpati ji se pooch lo kya? ğŸ™</p>
      </div>
    </div>
  </div>

  <!-- Tiny Database (10 items for demo) -->
  <script>
    const data = {
      "whisper ultra": {
        scare: "Ye Whisper pad aapke 18th generation ke baad bhi zinda rahega â€“ 800 saal tak",
        effects: [
          "2040 mein aapki beti ko 48Â°C garmi mein school jaana padega",
          "2060 mein Delhi mein oxygen bhi mehenga ho jayega",
          "2070 mein aapka pota asthma mask pehen ke khelega"
        ],
        alt: "Pee Safe / Carmesi cloth pads â€“ â‚¹249 (Swiggy Instamart â€“ 30 min)"
      },
      "bisleri": {
        scare: "Ye Bisleri bottle 450 saal tak zinda rahegi",
        effects: ["2040 mein pani ke liye gaon-gaon ladai hogi", "2050 mein Mumbai-Delhi train 100 din cancel"],
        alt: "Steel bottle â‚¹299 (canteen mein mil jaayegi) ya Milaap Copper â‚¹449"
      },
      "lays": {
        scare: "Ye â‚¹20 ka Lays packet 450 saal tak zinda rahega",
        effects: ["Aapka pota plastic ke dhher mein khelega"],
        alt: "Bahut wala bhutta â€“ â‚¹15 only + zero kachra!"
      },
      "shein dress": {
        scare: "Ye â‚¹499 ki Shein dress 500 saal tak microplastic chhodegi",
        effects: ["Samundar mein machhliyan marengi", "Aapki poti ke kapde bhi zeher bhare honge"],
        alt: "Same design ReWear app pe â€“ â‚¹180 (Andheri West pickup)"
      },
      "plastic straw": {
        scare: "Ye plastic straw 200 saal tak zinda rahegi",
        effects: ["Samundar mein kachhua isko naak mein daal lega"],
        alt: "Steel straw set â‚¹49 (Meesho â€“ kal tak delivery)"
      }
    };

    const input = document.getElementById('itemInput');
    const result = document.getElementById('result');

    input.addEventListener('input', function() {
      const query = this.value.toLowerCase().trim();
      const match = Object.keys(data).find(key => key.includes(query) || query.includes(key));
      
      if (match && query.length > 2) {
        const item = data[match];
        document.getElementById('scareText').textContent = item.scare;
        document.getElementById('familyEffects').innerHTML = item.effects.map(e => `<li>â€¢ ${e}</li>`).join('');
        document.getElementById('alternative').textContent = item.alt;
        result.classList.remove('hidden');
        result.scrollIntoView({ behavior: 'smooth' });
      } else {
        result.classList.add('hidden');
      }
    });
  </script>
</body>
</html>
